<div class="container my-5">
  <div class="row">
    <h2>ジャンル編集画面</h2>
  </div>

  <div class="row my-3 d-flex justify-content-center">
    <% if flash[:genre_updated_error] %>
      <span class="text-danger"><%= flash[:genre_updated_error] %></span>
    <% end %>
  </div>

  <div class="row flex-column align-items-center mt-3">
    <%= form_for(@genre, url: admin_genre_path) do |f| %>
      <div class="form-group row">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-check">
        <%= f.radio_button :is_enabled, :true %>
        <%= f.label :is_enabled, "有効" %>
        <%= f.radio_button :is_enabled, :false %>
        <%= f.label :is_enabled, "無効" %>
      </div>

      <div class="row">
        <%= f.submit "更新する", class: "btn btn-primary mx-auto mt-3" %>
      </div>
    <% end %>
  </div>

</div>

