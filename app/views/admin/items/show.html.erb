<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row">
    <div class="offset-sm-1 col-sm-3">
      <%= attachment_image_tag @item, :image, :fill, 100, 100, format: "jpeg", fallback: 'noimage.jpg', size: '100x100' %>
    </div>

    <div class="col-sm-4">
      <div class="row">
        <p>商品名</p>
        <p>｜</p>
        <%= @item.name %>
      </div>

      <div class="row">
        <p>商品説明</p>
        <p>｜</p>
        <%= @item.description %>
      </div>

      <div class="row">
        <p>ジャンル</p>
        <p>｜</p>
        <%= @item.genre.name %>
      </div>

      <div class="row">
        <p>税込価格(税抜価格)</p>
        <p>｜</p>
        <%= @item.price %>
        <p>（<%= (@item.price * 1.1).floor %>)</p>
        <p>円</p>
      </div>

      <div class="row">
        <p>販売ステータス</p>
        <p>｜</p>
        <p><%= @item.sale_status %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-9 col-sm-2">
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
  </div>
</div>



