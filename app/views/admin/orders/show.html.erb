<div class="container my-5">
  <div class="row">
    <h2>注文詳細</h2>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">

        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= link_to admin_customer_data_path(@order.customer) do %>
              <%= @order.last_name %>
              <%= @order.first_name %>
              <% end %>
            </td>
          </tr>

          <tr>
            <td>配送先</td>
            <td><%= @order.address %></td>
          </tr>

          <tr>
            <td>支払方法</td>
            <td><%= @order.payment %></td>
          </tr>

          <tr>
            <td>注文ステータス</td>
            <td><%= form_for (@order), url: admin_order_path(@order) do |f| %>
                <%= f.select :order_status, [["入金待ち", "入金待ち"], ["入金確認","入金確認"],["製作中","製作中"],["発送準備中","発送準備中"],["発送済み","発送済み"]], class: "form-control" %>
                <%= f.submit "更新" %>
                <% end %>
            </td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <% @order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item_name %></td>
              <td><%= (order_detail.item_price * 1.1).floor %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= (order_detail.item_price * order_detail.quantity * 1.1).floor %></td>
              <td>
                <%= form_for (order_detail), url: admin_order_path(order_detail, order_id: @order.id) do |f| %>
                  <%= f.select :item_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"], ["製作中","製作中"], ["製作完了","製作完了"]] %>
              </td>
              <td>
                  <%= f.submit "更新" %>
                <% end %>
                </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-sm-2">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="p-0">商品合計</td>
            <!-- 合計値を算出するよ -->
              <% total_price = 0 %>
              <% @order_details.each do |order_detail| %>
                <% tax_in_price = (order_detail.item_price * 1.1).floor %>
                <% sub_total_price = tax_in_price * order_detail.quantity %>
                <% total_price += sub_total_price %>
              <% end %>
            <td class="p-0">
              <%= total_price %><!-- 算出結果 -->
            </td>
          </tr>

          <tr>
            <td class="p-0">送料</td>
            <td class="p-0"><%= @order.carriage %></td>
          </tr>

          <tr>
            <td class="p-0">請求合計金額</td>
            <td class="p-0"><%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>