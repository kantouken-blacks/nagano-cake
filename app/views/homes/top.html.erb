<div id="carouselExampleIndicators" class="carousel carousel-fade slide" data-ride="carousel">

  <!-- スライドさせる画像の設定 -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'ninjin_cake.jpg', class: 'd-block w-100' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'shungiku_cake.jpg', class: 'd-block w-100' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'valentine_coolies.jpg', class: 'd-block w-100' %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'vegetables_cake.jpg', class: 'd-block w-100' %>
    </div>
  </div><!-- /.carousel-inner -->

  <!-- スライドコントロールの設定 -->
  <!-- "<"のデザイン -->
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <!-- ">"のデザイン -->
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div><!-- /.carousel -->

<div class="container my-5">
  <div class="row">
      <h3 class="red-border px-3 pb-1">New Item</h3>
  </div>

  <div class="row mx-auto mt-3">
    <% @items.last(4).each do |item| %>
      <div class="mx-auto">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: 'noimage.jpg', size: '200x200', class: "rounded" %><br>
        <% end %>
        <div class="row mt-3">
          <span class="red-border px-3"><%= item.name %></span>
        </div>
        <div class="row mt-1">
          <span class="offset-8"><%= (item.price * 1.1).floor %> 円</span>
        </div>
      </div>
    <% end %>
  </div>
</div>