<div class="container">
	<div class="row">
		<h3>配送先登録/一覧</h3>
	</div>

	<div class="row">
	 <%= form_for(@ship_address_new) do |f| %>
		<%= f.label :"郵便番号" %>
		<%= f.text_field :post_code %><br>
		<%= f.label :"住所" %>
		<%= f.text_field :address %><br>
		<%= f.label :"宛名" %>
		<%= f.text_field :last_name %>
		<%= f.text_field :first_name %>
		<%= f.submit "登録する", class: "btn btn-primary" %>
	<% end %>
    </div>


   <div class="row">
    <table class="table table-striped">
      <thead>
       <tr>
         <th>郵便番号</th>
         <th>住所</th>
         <th>宛名</th>
         <th></th>
       <tr>
      </thead>

     <tbody>
      <% @ship_addresses.each do |ship_address| %>
       <tr>
     	<td><%= ship_address.post_code %></td>
     	<td><%= ship_address.address %></td>
     	<td><%= ship_address.last_name %></td>
     	<td>編集する削除する</td>
       </tr>
      <% end %>
     </tbody>
    </table>

   </div>
</div>

