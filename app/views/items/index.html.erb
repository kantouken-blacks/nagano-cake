<!-- <div class="genre box"> -->
<div class="container">
 <div class="row">
      <div class="col-3 col-offset-1 mt-4">
      <%= render 'genrebox', genres: @genres %>
      </div>
      
	<div class="col-8 my-3">
	<h2>全ての商品</h2><!--動的ジャンル名設定する-->
	<p>全<%= Item.all.order(id: "asc").count %>件
	</p>
	<!-- 動的ジャンル登録アイテム数設定する-->
	    <div class="row">
	    	<% @items.each do |item| %>
	    	 <div class="col-md-3"> <!--ひとつのブロックをラップしてカラムを指定する-->
		        <%= link_to item_path(item) do %><!--それをeach文で回す-->
		        <%= attachment_image_tag item, :image, :fill, 160, 160, format: 'jpeg', fallback: "noimage.jpg", class: 'card-img-top' %>
		        <% end %>
		        <p class="text-muted"><%= item.genre.name %>
		        <h5 class="card-title"><%= item.name %></h5>
		        <p class="card-price"><%= item.price %></p>
		     </div>
	        <% end %>
	    </div>
   </div>
  </div>





  	<!-- ページネーション -->
  <div class="container">
	<div class="row">
	 <div class="col-md-4 offset-md-4 py-2">
	 <nav aria-label="Page navigation">
	  <ul class="pagination">
	    <li class="page-item"><a class="page-link" href="#">Prev</a></li>
	    <li class="page-item"><a class="page-link" href="#">1</a></li>
	    <li class="page-item"><a class="page-link" href="#">2</a></li>
	    <li class="page-item"><a class="page-link" href="#">3</a></li>
	    <li class="page-item"><a class="page-link" href="#">Next</a></li>
	  </ul>
	 </nav>
	 </div>
	</div>
 </div>
 	<!-- ページネーション -->
</div>


