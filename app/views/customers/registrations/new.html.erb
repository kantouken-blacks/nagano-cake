<h2>アカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <!-- 漢字カナ名前入力フォーム -->
  <div class="field">
    <h6>お名前</h6>
    <div class="last_name">
      <%= f.label :'姓 last name' %><br />
      <%= f.text_field :last_name, placeholder:"例）長野" %><br />
      <%= f.text_field :last_name_kana, placeholder:"例）ナガノ" %>
    </div>
    <div class="first_name">
      <%= f.label :'名 first name' %><br />
      <%= f.text_field :first_name, placeholder:"例）恵子" %><br />
      <%= f.text_field :first_name_kana, placeholder:"例）ケイコ" %>
    </div>
  </div>
  <!-- 郵便番号入力フォーム -->
  <div class="field">
    <%= f.label :'郵便番号' %><br />
    <%= f.text_field :post_code %>
  </div>
  <!-- 住所入力フォーム -->
  <div class="field">
    <%= f.label :'住所' %><br />
    <%= f.text_field :address %>
  </div>
  <!-- 電話番号入力フォーム -->
  <div class="field">
    <%= f.label :'電話番号' %><br />
    <%= f.text_field :phone_number %>
  </div>
  <!--email入力フォーム -->
  <div class="field">
    <%= f.label :'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <!-- password入力フォーム -->
  <div class="field">
    <%= f.label :'パスワード' %><br />
    <%= f.password_field :password, placeholder:"最低６文字必要です。", autocomplete: "new-password" %>
  </div>
  <!-- password確認フォーム -->
  <div class="field">
    <%= f.label :'もう一度パスワードを入力してください。' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <!-- Sign upボタン -->
  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
