<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3 pb-1">Profile Edit</h2>
    </div>
  </div>

  <div class="row my-3">
    <div class="offset-3 col-6">

    <%= form_for(@customer) do |f| %>
      <div class="form-group">
        <%= f.label :氏名, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name, class: "form-control offset-1 col-4"%>
          <%= f.text_field :first_name, class: "form-control col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ, class: "brown-border px-3" %>
        <div class="row">
          <%= f.text_field :last_name_kana, class: "form-control offset-1 col-4"%>
          <%= f.text_field :first_name_kana, class: "form-control col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号, class: "brown-border px-3" %>
        <%= f.text_field :post_code, class: "form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :住所, class: "brown-border px-3" %>
        <%= f.text_field :address, class: "form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :電話番号, class: "brown-border px-3" %>
        <%= f.text_field :phone_number, class: "form-control offset-1 col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class: "brown-border px-3" %>
        <%= f.email_field :email, class: "form-control offset-1 col-8"%>
      </div>

      <div class="row">
        <%= f.submit "編集内容を保存する", class: "btn btn-outline-danger offset-3 mt-3" %>
      </div>
    <% end %>

    </div>

    <div class="col-2 d-flex flex-column align-items-end">
      <%= link_to "退会する" , withdrow_customer_path(@customer), class: "btn btn-danger mt-auto" %>
    </div>
</div>