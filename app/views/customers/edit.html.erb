<div class="container my-5">
  <div class="row">
    <div class="offset-sm-1">
      <h2 class="head-border px-3 pb-1">Profile Edit</h2>
    </div>
  </div>

  <div class="row">
    <div class="offset-sm-3 col-sm-6">
    <%= form_for(@customer) do |f| %>
      <div class="form-group">
        <%= f.label :氏名 %>
        <div class="row">
          <%= f.text_field :last_name, class: "form-control col-4"%>
          <%= f.text_field :first_name, class: "form-control col-4"%>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana, class: "form-control col-4"%>
        <%= f.text_field :first_name_kana, class: "form-control col-4"%>
      </div>

      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_field :post_code, class: "form-control col-2"%>
      </div>

      <div class="form-group">
        <%= f.label :住所 %>
        <%= f.text_field :address, class: "form-control col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number, class: "form-control col-8"%>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: "form-control col-8"%>
      </div>

    <%= f.submit "編集内容を保存する", class: "btn btn-primary col-md-3" %>
    <% end %>

  <%= link_to "退会する" , withdrow_customer_path(@customer), class: "btn btn-danger" %>
</div>
